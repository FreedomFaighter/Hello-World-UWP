<Page x:Name="tWindow"
    x:Class="p99FileUpdater.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:p99FileUpdater"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DataContext="{d:DesignInstance Type=local:HelloWorldViewModel}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid RenderTransformOrigin="0.448,0.153">
        <TextBox x:Name="txtHelloWorld" HorizontalAlignment="Left" Margin="177,114,0,0" TextWrapping="Wrap" Text="{x:Bind HelloWorldVM.HelloWorldMessage, Mode=OneWay}" VerticalAlignment="Top" Height="86" Width="462" RenderTransformOrigin="0.514,0.55" IsReadOnly="True" />
        <Button x:Name="Show_Hello_World" Content="Show Hello World" Margin="177,304,0,0" VerticalAlignment="Top" Height="111" Width="435" IsEnabled="{x:Bind NegateBool(HelloWorldVM.MessageDisplayed), Mode=OneWay}" Command="{x:Bind HelloWorldVM.SetHelloWorldCommand}"/>
        <Button x:Name="Clear_Text" Content="Clear Text" Margin="177,500,0,0" VerticalAlignment="Top" Height="130" Width="435" IsEnabled="{x:Bind HelloWorldVM.MessageDisplayed, Mode=OneWay}" Command="{x:Bind HelloWorldVM.SetTextBoxClear}"/>
        <ProgressBar HorizontalAlignment="Left" Height="49" Margin="697,415,0,0" VerticalAlignment="Top" Width="381"/>

    </Grid>
</Page>
